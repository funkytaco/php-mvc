{
    "name": "php-seed-bootstrap",
    "description": "A 'no framework' MVC PHP scaffold to seed a Bootstrap-enabled application.",
    "keywords": ["template", "seed"],
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Gonzalez",
            "email": "decaturdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.37",
        "filp/whoops": ">=1.1.3",
        "klein/klein": ">=2.1.0",
        "mustache/mustache": ">=2.7.0",
        "rdlowrey/Auryn": ">=0.14.2",
        "twbs/bootstrap": "3.3.2@dev",
        "semantic/ui": "^2.0"

    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*"
    },

    "autoload": {
        "psr-4": {
            "Main\\": "src/",
            "Tasks\\" : "."

        }
    },


    "scripts": {

        "serve" : "Tasks\\ApplicationTasks::startDevelopmentWebServer",
        "install-bootstrap" : "Tasks\\ApplicationTasks::InstallBootstrap",
        "install-semanticui" : "Tasks\\ApplicationTasks::InstallSemanticUi",
        "install-dashboard" : "Tasks\\ApplicationTasks::InstallDashboard",
        "install-api" : "Tasks\\ApplicationTasks::InstallApi",
        "unlock" : "Tasks\\ApplicationTasks::DeleteLockFile",
        "post-install-cmd": [  "Tasks\\ApplicationTasks::postInstall" ],
        "post-update-cmd": [  "Tasks\\ApplicationTasks::postUpdate" ],
        "post-package-install": [
        ],
        "post-create-project-cmd" : [
        ],
        "reinstall": [
        ]
    },


    "extra": {
        "bootstrap-assets": {
            "copy-assets" : true,
            "dist": { "source": "vendor/twbs/bootstrap/dist", "target": "public/assets/bootstrap/dist", "isFile": false},
            "docs": { "source": "vendor/twbs/bootstrap/docs", "target": "public/assets/bootstrap/docs", "isFile": false},
            "fonts": { "source": "vendor/twbs/bootstrap/fonts", "target": "public/assets/bootstrap/fonts", "isFile": false},
            "views": { "source": ".installer/bootstrap/Views", "target": "Views", "isFile": false},
            "controllers": { "source": ".installer/common/Controllers", "target": "Controllers", "isFile": false},
            "routes": { "source": ".installer/bootstrap/routes/CustomRoutes.php", "target": "CustomRoutes.php", "isFile": true},
            "dashboard-css": { "source": "vendor/twbs/bootstrap/docs/examples/dashboard", "target": "public/assets/css/themes", "isFile": false},
            "lockFile": { "source": ".installer/app.lock", "target": "src/.lock/app.lock", "isFile": true}

        },
        "semanticui-assets": {
            "copy-assets" : true,
            "dist": { "source": "vendor/semantic/ui/dist", "target": "public/assets/semantic/ui/dist", "isFile": false},
            "examples": { "source": "vendor/semantic/ui/examples", "target": "public/assets/semantic/ui/examples", "isFile": false},
            "views": { "source": ".installer/semantic-ui/Views", "target": "Views", "isFile": false},
            "controllers": { "source": ".installer/common/Controllers", "target": "Controllers", "isFile": false},
            "routes": { "source": ".installer/semantic-ui/routes/CustomRoutes.php", "target": "CustomRoutes.php", "isFile": true}
        },
        "dashboard-assets": {
            "copy-assets" : true,
            "dist": { "source": "vendor/semantic/ui/dist", "target": "public/assets/semantic/ui/dist", "isFile": false},
            "examples": { "source": "vendor/semantic/ui/examples", "target": "public/assets/semantic/ui/examples", "isFile": false},
            "views": { "source": ".installer/dashboard/Views", "target": "Views", "isFile": false},
            "controllers": { "source": ".installer/common/Controllers", "target": "Controllers", "isFile": false},
            "routes": { "source": ".installer/dashboard/routes/CustomRoutes.php", "target": "CustomRoutes.php", "isFile": true}
        },
        "restapi-assets": {
            "copy-assets" : true,
            "views": { "source": ".installer/rest-api/Views", "target": "Views", "isFile": false},
            "controllers": { "source": ".installer/rest-api/Controllers", "target": "Controllers", "isFile": false},
            "routes": { "source": ".installer/rest-api/routes/CustomRoutes.php", "target": "CustomRoutes.php", "isFile": true}
        }

    }

}
