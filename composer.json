{
    "name": "php-noframework-seed",
    "description": "A 'no framework' PHP template to seed your application.",
    "keywords": ["template", "seed"],
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Gonzalez",
            "email": "decaturdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.37",
        "filp/whoops": ">=1.1.3",
        "klein/klein": ">=2.1.0",
        "mustache/mustache": ">=2.7.0",
        "rdlowrey/Auryn": ">=0.14.2",
        "twbs/bootstrap": "3.3.2@dev"

    },

    "autoload": {
        "psr-4": {
            "Main\\": "src/",
            "Tasks\\" : "."
        }
    },


    "scripts": {

        "serve" : "Tasks\\DevTasks::startDevelopmentWebServer",
        "post-update-cmd": [  "Tasks\\DevTasks::postUpdate" ],
        "post-package-install": [
            "Tasks\\DevTasks::postPackageInstall"
        ],
        "post-create-project-cmd" : [
            "php -r \"copy('config/local-example.php', 'config/local.php');\""
        ],
        "reinstall": [
            "Tasks\\DevTasks::postPackageReinstall"
        ]
    },


    "extra": {
        "bootstrap-assets": {
            "copy-assets" : true,
            "dist": { "source": "vendor/twbs/bootstrap/dist", "target": "public/assets/bootstrap/dist"},
            "docs": { "source": "vendor/twbs/bootstrap/docs", "target": "public/assets/bootstrap/docs"},
            "fonts": { "source": "vendor/twbs/bootstrap/fonts", "target": "public/assets/bootstrap/fonts"}
        }
    }

}