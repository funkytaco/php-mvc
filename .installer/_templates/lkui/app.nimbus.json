{
    "name": "{{APP_NAME}}",
    "version": "1.0.0",
    "type": "lkui",
    "description": "License Key UI for SSL CSR Generation, Renewal and Retrieval",
    "features": {
        "database": true,
        "eda": true,
        "certbot": false,
        "keycloak": false
    },
    "containers": {
        "app": {
            "port": "{{APP_PORT}}"
        },
        "db": {
            "engine": "postgres",
            "version": "14"
        },
        "eda": {
            "image": "registry.redhat.io/ansible-automation-platform-24/de-minimal-rhel9:latest",
            "rulebooks_dir": "rulebooks"
        }
    },
    "database": {
        "name": "{{DB_NAME}}",
        "user": "{{DB_USER}}",
        "password": "{{DB_PASSWORD}}"
    },
    "assets": {
        "controllers": {
            "source": "Controllers",
            "target": "app/Controllers",
            "isFile": false
        },
        "models": {
            "source": "Models",
            "target": "app/Models",
            "isFile": false
        },
        "views": {
            "source": "Views",
            "target": "app/Views",
            "isFile": false
        },
        "routes": {
            "source": "routes/CustomRoutes.php",
            "target": "app/CustomRoutes.php",
            "isFile": true
        },
        "config": {
            "source": "app.config.php",
            "target": "app/app.config.php",
            "isFile": true
        },
        "public_assets": {
            "source": "public",
            "target": "public",
            "isFile": false
        },
        "setup_hosts": {
            "source": "../../dns/dns-template-setup-hosts.sh",
            "target": "dns-setup-{{APP_NAME}}-hosts.sh",
            "isFile": true
        },
        "init_entrypoint": {
            "source": "init-entrypoint.sh",
            "target": "init-entrypoint.sh",
            "isFile": true
        }
    }
}